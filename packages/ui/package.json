{
  "name": "@workspace/ui",
  "version": "0.0.0",
  "private": true,
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "build:styles": "tailwindcss -i ./src/assets/css/tailwind.css -o ./dist/index.css",
    "build:components": "tsc",
    "dev:styles": "tailwindcss -i ./src/assets/css/tailwind.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint ."
  },
  "exports": {
    "./styles.css": "./dist/index.css",
    "./*": "./dist/*.js",
    ".": "./src/index.ts",
    "./components/*": "./src/components/*.vue",
    "./tailwind.css": "./src/assets/css/tailwind.css"
  },
  "files": [
    "src"
  ],
  "dependencies": {
    "@nuxt/kit": "^4.0.3",
    "@vueuse/core": "^13.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.539.0",
    "reka-ui": "^2.4.1",
    "shadcn-vue": "^2.2.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@nuxt/module-builder": "^1.0.2",
    "@tailwindcss/cli": "4.1.11",
    "@tailwindcss/postcss": "4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/tailwind-config": "workspace:*",
    "@workspace/tsconfig": "workspace:*",
    "autoprefixer": "10.4.21",
    "tailwindcss": "4.1.11",
    "typescript": "5.5.4",
    "vue": "^3.4.21"
  }
}
